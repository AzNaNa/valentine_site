import random
digits = '0123456789'
lowercase_letters = 'abcdefghijklmnopqrstuvwxyz'
uppercase_letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
punctuation = '!#$%&*+-=?@^_.'
def password_conditions(number):
    chars = ""
    answer = input(f"Ваш {number} пароль должен содержать числа? Да/Нет ")
    if answer.lower() in ['да', 'yes', 'y', 'д']:
        chars += digits    
    answer = input(f"Ваш {number} пароль должен содержать буквы в нижнем регистре? Да/Нет ")
    if answer.lower() in ['да', 'yes', 'y', 'д']:
        chars += lowercase_letters     
    answer = input(f"Ваш {number} пароль должен содержать буквы в вехрнем регистре? Да/Нет ")
    if answer.lower() in ['да', 'yes', 'y', 'д']:
        chars += uppercase_letters    
    answer = input(f"Ваш {number} пароль должен содержать символы? Да/Нет ")
    if answer.lower() in ['да', 'yes', 'y', 'д']:
        chars += punctuation   
    return chars
def password_generator(length, number):
    while True:  
        if int(length) > 0:
            chars = password_conditions(number)  
            if not chars:  
                print("Ошибка: вы не выбрали ни одного типа символов!")
                continue
            password = ''
            for i in range(int(length)):
                password += random.choice(chars)    
            return password        
        else:
            print("Некорректная длина пароля! Введите положительное число")   


print("Добро пожаловать в генератор паролей! ")
how_many_passwords = input("Сколько паролей вы хотите сгенерировать? ")

lengths = []
passwords = []
for i in range(int(how_many_passwords)):
    lengths.append(int(input(f"Какой должна быть длина вашего {i + 1} - ого пароля? ")))
for i in range(len(lengths)):
    passwords.append(password_generator(lengths[i], i + 1))
for i in range(int(how_many_passwords)):
    print(f'Ваш {i + 1} пароль - {passwords[i]}')

